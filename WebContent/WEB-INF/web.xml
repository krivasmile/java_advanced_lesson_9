<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">
	<display-name>Lesson7</display-name>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	<servlet>
		<servlet-name>RegistrationServlet</servlet-name>
		<servlet-class>ua.kyiv.app.servlets.RegistrationServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>RegistrationServlet</servlet-name>
		<url-pattern>/registration</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>ProductController</servlet-name>
		<servlet-class>ua.kyiv.app.servlets.ProductController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ProductController</servlet-name>
		<url-pattern>/product</url-pattern>
	</servlet-mapping>
	
	<servlet>
    <servlet-name>BucketController</servlet-name>
    <servlet-class>ua.kyiv.app.servlets.BucketController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>BucketController</servlet-name>
    <url-pattern>/bucket</url-pattern>
  </servlet-mapping>

</web-app>